{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es5",
    "esModuleInterop": true,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "lib": ["esnext", "es2018", "es2017", "es2016", "es2015", "dom"],
    "moduleResolution": "node",
    "outDir": "./dist/",
    "sourceMap": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "ui/*": ["src/ui/*"]
    }
  },
  "files": [
    "src/ui/index.ts",
    "./styles.d.ts"
  ]
}
